<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.zbl.app.dao.ExpireDao">

	<select id="get" resultType="me.zbl.app.domain.ExpireDO">
		select `id`,`drug_id`,`expired_date` from app_expire where id = #{value}
	</select>

	<select id="list" resultType="me.zbl.app.domain.ExpireDO">
		select `id`,`drug_id`,`expired_date` from app_expire
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="drugId != null and drugId != ''"> and drug_id = #{drugId} </if>
		  		  <if test="expiredDate != null and expiredDate != ''"> and expired_date = #{expiredDate} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from app_expire
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="drugId != null and drugId != ''"> and drug_id = #{drugId} </if>
		  		  <if test="expiredDate != null and expiredDate != ''"> and expired_date = #{expiredDate} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="me.zbl.app.domain.ExpireDO">
		insert into app_expire
		(
			`id`, 
			`drug_id`, 
			`expired_date`
		)
		values
		(
			#{id}, 
			#{drugId}, 
			#{expiredDate}
		)
	</insert>
	 
	<update id="update" parameterType="me.zbl.app.domain.ExpireDO">
		update app_expire 
		<set>
			<if test="drugId != null">`drug_id` = #{drugId}, </if>
			<if test="expiredDate != null">`expired_date` = #{expiredDate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from app_expire where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from app_expire where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>